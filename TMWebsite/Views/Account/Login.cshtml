                    </div>*@
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @*<h4 class="text-xs-center">Sử dụng tài khoản được cung cấp.</h4>
                            <hr />*@
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "", @placeholder = "Tài khoản" })
                                    @Html.ValidationMessageFor(m => m.UserName,"", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-xs-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.Password,"", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-xs-12">
                                    <div class="checkbox checkbox-custom">
                                        <INPUT id=RememberMe style="opacity:1;" name=RememberMe value=true type=checkbox data-val-required="Trường không được bỏ trống" data-val="true">
                                        <INPUT name=RememberMe value=false type=hidden>
                                        Nhớ cho lần đăng nhập sau.                                
                                    </div>                           
                                </div>
                            </div>

                            <div class="form-group text-center m-t-30">
                                <div class="col-xs-12">
                                    <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Đăng nhập</button>
                                </div>
                            </div>

                            @*<div class="form-group m-t-30 m-b-0">
                                <div class="col-sm-12">
                                    <a href="#" class="text-muted"><i class="fa fa-lock m-r-5"></i> Bạn quên mật khẩu?</a>
                                </div>
                            </div>*@
                        }
                    </section>
                </div>             
