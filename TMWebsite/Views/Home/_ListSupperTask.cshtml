@model IEnumerable<HRM_WEBSITE.ModelsView.TaskList>

<div class="col-lg-12">
    <div class="card-box">
        <div class="row">
            <div id="lstSupperTask">
                <table id="itemContent" class="table table-striped table-bordered dataTable no-footer">
                    <thead>
                        <tr>
                            <th id="tName">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th id="tMode">
                                @Html.DisplayNameFor(model => model.Mode)
                            </th>
                            <th id="tPriority">
                                @Html.DisplayNameFor(model => model.Priority)
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tContent">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col1">
                                    @Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @style = "text-decoration:none" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>  <!-- end row -->
    </div>
</div>
